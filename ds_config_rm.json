{
    "gradient_clipping": 1.0,
    "gradient_accumulation_steps": 4,
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "fp16": {
      "enabled": true
    },
    "bf16": {
      "enabled": false
    },
    "zero_optimization": {
      "stage": 2,
      "offload_param": {
        "device": "cpu"
      },
      "offload_optimizer": {
        "device": "cpu"
      },
      "allgather_partitions": true,
      "allgather_bucket_size": 5e8,
      "contiguous_gradients": true
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
          "warmup_min_lr": 0,
          "warmup_max_lr": "auto",
          "warmup_num_steps": 100
      }
    },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": "auto",
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.0
      }
    }
  }